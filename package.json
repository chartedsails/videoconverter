{
  "name": "@chartedsails/videoconverter",
  "productName": "ChartedSails VideoConverter",
  "description": "Easily convert and reduce size of video files",
  "author": {
    "name": "Thomas Sarlandie",
    "email": "thomas@chartedsails.com"
  },
  "version": "0.0.1",
  "private": true,
  "build": {
    "appId": "com.chartedsails.videoconverter",
    "productName": "ChartedSails VideoConverter",
    "copyright": "ChartedSails LLC 2020",
    "files": [
      "dist/**/*"
    ],
    "mac": {
      "category": "public.app-category.video",
      "entitlements": "buildResources/entitlements.mac.plist",
      "entitlementsInherit": "buildResources/entitlements.mac.plist",
      "asarUnpack": [
        "../node_modules/@ffmpeg-installer",
        "../node_modules/@ffprobe-installer"
      ]
    },
    "win": {
      "asarUnpack": [
        "../node_modules/@ffmpeg-installer",
        "../node_modules/@ffprobe-installer"
      ]
    },
    "directories": {
      "buildResources": "buildResources",
      "output": "releases"
    },
    "afterSign": "electron-builder-notarize",
    "publish": {
      "provider": "github"
    }
  },
  "scripts": {
    "disabled-postinstall": "electron-builder install-app-deps",
    "dev:electron": "NODE_ENV=development webpack --config webpack.electron.config.js --mode development && NODE_ENV=development webpack --config webpack.preload.config.js --mode development && electron .",
    "dev:react": "NODE_ENV=development webpack-dev-server --config webpack.react.config.js --mode development",
    "build:electron": "webpack --config webpack.electron.config.js --mode production",
    "build:react": "webpack --config webpack.react.config.js --mode production",
    "build": "yarn build:electron && yarn build:react",
    "storybook": "start-storybook -p 9010 -s public",
    "build-storybook": "build-storybook -o storybook-output",
    "package": "yarn build && electron-builder --mac ",
    "release": "yarn build && electron-builder --mac --publish always",
    "test": "jest",
    "precommit": "lint-staged && tsc --noEmit --skipLibCheck && yarn test "
  },
  "main": "./dist/main.js",
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@storybook/addon-actions": "^6.0.7",
    "@storybook/addon-knobs": "^6.0.7",
    "@storybook/cli": "^6.0.7",
    "@storybook/react": "^6.0.7",
    "@types/express": "^4.17.7",
    "@types/fluent-ffmpeg": "^2.1.14",
    "@types/jest": "^26.0.9",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@types/react-dropzone": "^5.1.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "2.x",
    "@typescript-eslint/parser": "2.x",
    "babel-eslint": "10.x",
    "babel-loader": "^8.1.0",
    "electron": "9.2.0",
    "electron-builder": "^22.8.0",
    "electron-builder-notarize": "^1.2.0",
    "eslint": "6.x",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "4.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "2.x",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "lint-staged": "^10.2.11",
    "storybook": "^6.0.7",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^3.9.5",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-node-externals": "^2.5.1"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.0.20",
    "@ffprobe-installer/ffprobe": "^1.0.12",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "about-window": "^1.13.4",
    "electron-log": "^4.2.2",
    "electron-updater": "^4.3.4",
    "express": "^4.17.1",
    "fluent-ffmpeg": "^2.1.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-dropzone": "^11.0.3",
    "uuid": "^8.3.0"
  },
  "prettier": {
    "semi": false,
    "trailingComma": "es5"
  },
  "jest": {
    "moduleNameMapper": {
      "^~(.*$)": "<rootDir>/src$1"
    }
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "no-console": 2
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint",
      "prettier"
    ]
  }
}